@model ControlAsistencia.Models.Credencial

@{
    ViewData["Title"] = "Editar Credencial";
}

<h2>Editar Credencial</h2>

<h4>Modifica los datos de la credencial</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar">
            <!-- Campo oculto para el ID de la credencial -->
            <input asp-for="IdCredencial" type="hidden" />

            <!-- Campo para seleccionar el usuario -->
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Usuario</label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.Usuarios"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <!-- Campo para el nombre de usuario -->
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label">Nombre de Usuario</label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <!-- Campo para la contraseña (con type password para seguridad) -->
            <div class="form-group">
                <label asp-for="Contrasena" class="control-label">Contraseña</label>
                <input asp-for="Contrasena" type="password" class="form-control" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <!-- Campo para seleccionar el rol -->
            <div class="form-group">
                <label asp-for="IdRol" class="control-label">Rol</label>
                <select asp-for="IdRol" class="form-control" asp-items="ViewBag.Roles"></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>

            <!-- Botón para guardar los cambios -->
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
