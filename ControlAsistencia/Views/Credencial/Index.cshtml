@model IEnumerable<ControlAsistencia.Models.Credencial>

@{
    ViewBag.Title = "Lista de Credenciales";
}

<h2 class="mt-3">Lista de Credenciales</h2>

<!-- Botón para crear una nueva credencial -->
<div class="mb-3">
    <a asp-action="Crear" class="btn btn-success">
        <i class="fas fa-plus"></i> Crear Nueva Credencial
    </a>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().NombreUsuario)</th>
                <th>@Html.DisplayNameFor(model => model.First().Usuario.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Rol.NombreRol)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                    <td>@Html.DisplayFor(modelItem => item.Usuario.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rol.NombreRol)</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.IdCredencial" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@item.IdCredencial" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash-alt"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-3">
        No se encontraron credenciales.
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
