@model IEnumerable<ControlAsistencia.Models.Credencial>

<div class="container mt-5">
    <h2 class="text-center display-4">Gestión de Credenciales</h2>

    <!-- Barra de búsqueda -->
    <form method="get" action="@Url.Action("Index", "Credencial")" class="form-inline justify-content-center mb-3">
        <input type="text" name="searchString" class="form-control mr-2" placeholder="Buscar por Nombre o Usuario" value="@ViewData["CurrentFilter"]" />

        <select name="roleFilter" class="form-control mr-2">
            <option value="Todos">Todos</option>
            <option value="Administrador">Administrador</option>
            <option value="Empleado">Empleado</option>
            <option value="Jefatura">Jefatura</option>
        </select>

        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-hover mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Nombre de Usuario</th>
                    <th>Rol</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var credencial in Model)
                {
                    <tr>
                        <td>@credencial.Usuario.Nombre</td>
                        <td>@credencial.Usuario.Apellido</td>
                        <td>@credencial.NombreUsuario</td>
                        <td>@credencial.Rol.NombreRol</td>
                        <td class="text-center">
                            <a href="@Url.Action("Editar", "Credencial", new { id = credencial.IdCredencial })" class="btn btn-warning btn-sm mr-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="@Url.Action("Eliminar", "Credencial", new { id = credencial.IdCredencial })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">No hay credenciales disponibles.</div>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("Crear", "Credencial")" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Agregar Nueva Credencial
        </a>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .btn-sm {
        font-size: 0.85rem;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table th {
        background-color: #343a40;
        color: #fff;
    }

    .table-hover tbody tr {
        transition: background-color 0.3s ease-in-out;
    }
</style>
