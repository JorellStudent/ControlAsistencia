@model ControlAsistencia.Models.HorarioTrabajo

@{
    ViewBag.Title = "Crear Horario de Trabajo";
}

<h2>Crear Horario de Trabajo</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="IdUsuario">Empleado</label>
        <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.Usuarios"></select>
        <span asp-validation-for="IdUsuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DiaSemana">Día de la Semana</label>
        <input asp-for="DiaSemana" class="form-control" />
        <span asp-validation-for="DiaSemana" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="HoraEntrada">Hora de Entrada</label>
        <input asp-for="HoraEntrada" class="form-control" type="time" />
        <span asp-validation-for="HoraEntrada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="HoraSalida">Hora de Salida</label>
        <input asp-for="HoraSalida" class="form-control" type="time" />
        <span asp-validation-for="HoraSalida" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</form>
