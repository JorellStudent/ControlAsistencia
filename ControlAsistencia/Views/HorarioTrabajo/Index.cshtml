@model IEnumerable<ControlAsistencia.Models.HorarioTrabajo>

@{
    ViewBag.Title = "Lista de Horarios de Trabajo";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Lista de Horarios de Trabajo</h2>

    <table class="table table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Empleado</th>
                <th>Día de la Semana</th>
                <th>Hora de Entrada</th>
                <th>Hora de Salida</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Usuario.Nombre @item.Usuario.Apellido</td>
                    <td>@item.DiaSemana</td>
                    <td>@item.HoraEntrada.ToString("hh\\:mm")</td>
                    <td>@item.HoraSalida.ToString("hh\\:mm")</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.IdHorario" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@item.IdHorario" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este horario?');">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Crear" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear Nuevo Horario
        </a>
    </div>
</div>

