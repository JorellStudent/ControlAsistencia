@model ControlAsistencia.Models.HorarioTrabajo

<h2>Eliminar Horario de Trabajo</h2>

<h3 class="text-danger">¿Estás seguro de que deseas eliminar este horario?</h3>

<div>
    <h4>Detalles del Horario</h4>
    <dl class="row">
        <dt class="col-sm-2">Empleado</dt>
        <dd class="col-sm-10">@Model.Usuario?.Nombre @Model.Usuario?.Apellido</dd>

        <dt class="col-sm-2">Día de la Semana</dt>
        <dd class="col-sm-10">@Model.DiaSemana</dd>

        <dt class="col-sm-2">Hora de Entrada</dt>
        <dd class="col-sm-10">@Model.HoraEntrada.ToString("hh\\:mm")</dd>

        <dt class="col-sm-2">Hora de Salida</dt>
        <dd class="col-sm-10">@Model.HoraSalida.ToString("hh\\:mm")</dd>
    </dl>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="IdHorario" />
        <!-- Botón de confirmación de eliminación -->
        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar este horario?');">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
