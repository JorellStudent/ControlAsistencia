@model IEnumerable<ControlAsistencia.Models.Asistencia>

@{
    ViewBag.Title = "Reportes de Asistencia";
}

<h2>Reportes de Asistencia</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Empleado</th>
            <th>Fecha</th>
            <th>Hora de Entrada</th>
            <th>Hora de Salida</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Usuario.Nombre @item.Usuario.Apellido</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@item.HoraEntrada.ToString("HH:mm")</td>
                <td>@item.HoraSalida?.ToString("HH:mm")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.IdAsistencia" class="btn btn-primary">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.IdAsistencia" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Crear" class="btn btn-success">Agregar Nueva Asistencia</a>
