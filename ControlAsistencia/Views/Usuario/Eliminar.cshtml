@model ControlAsistencia.Models.Usuario

@{
    Layout = "_Layout";
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <h2 class="text-center text-danger">Confirmación de Eliminación</h2>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <p><strong>Nombre:</strong> @Model.Nombre</p>
                    <p><strong>Apellido:</strong> @Model.Apellido</p>
                    <p><strong>Correo:</strong> @Model.Correo</p>
                    <p><strong>RUT:</strong> @Model.RUT</p>

                    <form asp-action="EliminarConfirmado" asp-route-id="@Model.IdUsuario" method="post">
                        @Html.AntiForgeryToken() <!-- Protección CSRF -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger btn-lg mr-3">
                                <i class="fas fa-trash-alt"></i> Confirmar Eliminación
                            </button>
                            <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .card {
        border-radius: 15px;
        border: 2px solid #dc3545;
        transition: all 0.3s ease-in-out;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    .btn-secondary {
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    .btn-danger:hover {
        background-color: #bd2130;
        border-color: #bd2130;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        border-color: #5a6268;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    body {
        background-color: #f8f9fa;
    }

    .text-danger {
        color: #dc3545;
    }
</style>
