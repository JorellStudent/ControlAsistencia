@model ControlAsistencia.Models.Usuario

@{
    Layout = "_Layout";
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <h2 class="text-center display-4">Editar Usuario</h2>

    <form asp-action="Editar" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken() <!-- Protección CSRF -->

        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
        </div>

        <div class="form-group">
            <label for="Apellido">Apellido</label>
            <input type="text" class="form-control" id="Apellido" name="Apellido" value="@Model.Apellido" required />
        </div>

        <div class="form-group">
            <label for="Correo">Correo</label>
            <input type="email" class="form-control" id="Correo" name="Correo" value="@Model.Correo" required />
        </div>

        <div class="form-group">
            <label for="RUT">RUT</label>
            <input type="text" class="form-control" id="RUT" name="RUT" value="@Model.RUT" required />
        </div>

        <div class="form-group">
            <label for="Sexo">Sexo</label>
            <select class="form-control" id="Sexo" name="Sexo">
                <option value="Masculino" selected="@(Model.Sexo == "Masculino" ? "selected" : null)">Masculino</option>
                <option value="Femenino" selected="@(Model.Sexo == "Femenino" ? "selected" : null)">Femenino</option>

            </select>
        </div>

        <div class="form-group">
            <label for="FechaNacimiento">Fecha de Nacimiento</label>
            <input type="date" class="form-control" id="FechaNacimiento" name="FechaNacimiento" value="@Model.FechaNacimiento.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="form-group">
            <label for="Nacionalidad">Nacionalidad</label>
            <input type="text" class="form-control" id="Nacionalidad" name="Nacionalidad" value="@Model.Nacionalidad" required />
        </div>

        <div class="form-group">
            <label for="Foto">Foto del Usuario</label>
            <input type="file" class="form-control-file" id="Foto" name="Foto" />
            @if (!string.IsNullOrEmpty(Model.Foto))
            {
                <div class="mt-3">
                    <img src="@Model.Foto" alt="Foto actual" width="150" />
                    <p class="text-muted">Foto actual</p>
                </div>
            }
        </div>

        <input type="hidden" name="IdUsuario" value="@Model.IdUsuario" />

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Guardar Cambios</button>
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary btn-lg ml-3">Cancelar</a>
        </div>
    </form>
</div>

<!-- Estilos adicionales -->
<style>
    .form-group {
        margin-bottom: 20px;
    }

    .btn {
        padding: 10px 20px;
    }

    img {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
