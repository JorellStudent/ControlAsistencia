@model ControlAsistencia.Models.Usuario

<div class="container mt-5">
    <h2 class="text-center display-4">Detalles del Usuario</h2>

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Información Personal</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <tbody>
                            <tr>
                                <th>Nombre:</th>
                                <td>@Model.Nombre</td>
                            </tr>
                            <tr>
                                <th>Apellido:</th>
                                <td>@Model.Apellido</td>
                            </tr>
                            <tr>
                                <th>Correo:</th>
                                <td>@Model.Correo</td>
                            </tr>
                            <tr>
                                <th>RUT:</th>
                                <td>@Model.RUT</td>
                            </tr>
                            <tr>
                                <th>Fecha de Nacimiento:</th>
                                <td>@Model.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <th>Sexo:</th>
                                <td>@Model.Sexo</td>
                            </tr>
                            <tr>
                                <th>Nacionalidad:</th>
                                <td>@Model.Nacionalidad</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.Foto))
                            {
                                <tr>
                                    <th>Foto:</th>
                                    <td>
                                        <img src="@Model.Foto" alt="Foto de usuario" class="rounded-circle img-thumbnail" width="150" height="150" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center bg-light">
                    <a href="@Url.Action("Index", "Usuario")" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .table th {
        width: 30%;
        font-weight: bold;
    }

    .table td {
        width: 70%;
        vertical-align: middle;
    }

    .card {
        transition: all 0.3s ease-in-out;
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .card-footer {
        padding: 1.5rem;
        background-color: #f8f9fa;
    }

    .btn-primary {
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    .img-thumbnail {
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
    }

    body {
        background-color: #f5f5f5;
    }
</style>
