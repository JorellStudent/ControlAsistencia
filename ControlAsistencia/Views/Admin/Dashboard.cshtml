@{
    Layout = "_Layout";
    ViewData["Title"] = "Panel de Administración";
}

<div class="container mt-5">
    <h2 class="text-center display-4 font-weight-bold mb-5">Panel de Administración</h2>
    <div class="row justify-content-center">
        <!-- Sección para gestionar usuarios -->
        <div class="col-md-6 col-lg-3 mb-4 d-flex flex-column justify-content-between align-items-center text-center">
            <div class="mb-4">
                <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                <h4 class="font-weight-bold">Gestión de Usuarios</h4>
                <p class="text-muted">Crear, editar o eliminar usuarios</p>
            </div>
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-primary btn-lg w-100">Gestionar Usuarios</a>
        </div>

        <!-- Sección para gestionar credenciales -->
        <div class="col-md-6 col-lg-3 mb-4 d-flex flex-column justify-content-between align-items-center text-center">
            <div class="mb-4">
                <i class="fas fa-id-badge fa-3x mb-3 text-info"></i>
                <h4 class="font-weight-bold">Gestión de Credenciales</h4>
                <p class="text-muted">Crear, editar o eliminar credenciales</p>
            </div>
            <a href='@Url.Action("Index", "Credencial")' class="btn btn-info btn-lg w-100">Gestionar Credenciales</a>
        </div>

        <!-- Sección para definir horarios de trabajo -->
        <div class="col-md-6 col-lg-3 mb-4 d-flex flex-column justify-content-between align-items-center text-center">
            <div class="mb-4">
                <i class="fas fa-calendar-alt fa-3x mb-3 text-warning"></i>
                <h4 class="font-weight-bold">Horarios de Trabajo</h4>
                <p class="text-muted">Definir horarios de trabajo</p>
            </div>
            <a href='@Url.Action("Index", "HorarioTrabajo")' class="btn btn-warning btn-lg w-100">Definir Horarios</a>
        </div>

        <!-- Sección para reportes de asistencia -->
        <div class="col-md-6 col-lg-3 mb-4 d-flex flex-column justify-content-between align-items-center text-center">
            <div class="mb-4">
                <i class="fas fa-file-alt fa-3x mb-3 text-success"></i>
                <h4 class="font-weight-bold">Reportes de Asistencia</h4>
                <p class="text-muted">Generar reportes de asistencia</p>
            </div>
            <a href='@Url.Action("Index", "Reporte")' class="btn btn-success btn-lg w-100">Ver Reportes</a>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .btn-lg {
        font-size: 1.1rem;
        padding: 10px 30px;
        border-radius: 30px;
        min-width: 200px;
    }

    h4 {
        font-size: 1.4rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .text-muted {
        font-size: 0.95rem;
        color: #6c757d;
    }

    .container h2 {
        font-size: 2.75rem;
        color: #0056b3;
        margin-bottom: 2rem;
    }

    /* Estilos para alinear el ícono */
    i {
        margin-bottom: 10px;
        display: block;
    }

    /* Estilos para igualar la altura de las columnas */
    .d-flex {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .mb-4 {
        margin-bottom: auto;
    }

    /* Hover colors for buttons */
    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    
</style>
